
$horizontal-ad-width = 655px
$horizontal-ad-height = 81px
$vertical-ad-width = 300px
$vertical-ad-height = 250px


body > div.ad
	position: absolute

	&.ad-left
	&.ad-right
		top: 187px

	&.ad-left
		left: 0

		img
			margin-left: -38px

	&.ad-right
		right: 0

		img
			margin-right: -38px
	
	img
		opacity: 0.2
		transform: scale(0.40)
		transition: all 0.2s

		&:hover
			margin-left: 0
			margin-right: 0
			opacity: 1
			transform: scale(1)
			transition: all 0.5s

	&.ad-bottom

		a
			position: fixed
			bottom: 0
			left: 50%

			& > div
				position: relative
				left: -50%
				margin-top: 0px
				color: #c5c2c2
				opacity: 0.7
				transform: scale(0.8)
				transition: all 0.2s

				h3
					display: inline-block

				&:hover
					margin-top: -30px
					opacity: 1
					transform: scale(1)
					transition: all 0.5s